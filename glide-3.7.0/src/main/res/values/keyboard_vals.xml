    <dimen name="gkeyboard_edge_padding">12dp</dimen>
    <dimen name="gkeyboard_common_padding">8dp</dimen>
    <dimen name="gkeyboard_btn_extra_padding">4dp</dimen>

    <style name="gkeyboard_btn">
        <item name="android:layout_height">@dimen/gkeyboard_lead_btn_size</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/gkeyboard_btn_font_size</item>
        <item name="android:layout_marginLeft">@dimen/gkeyboard_common_padding</item>
        <item name="android:layout_marginTop">@dimen/gkeyboard_common_padding</item>
    </style>

    <style name="gkeyboard_lead_btn" parent="gkeyboard_btn">
        <item name="android:layout_width">@dimen/gkeyboard_lead_btn_size</item>
        <item name="android:layout_marginRight">@dimen/gkeyboard_btn_extra_padding</item>
        <item name="android:background">@drawable/gkeyboard_lead_key_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gkeyboard_grid_btn" parent="gkeyboard_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/gkeyboard_key_bg</item>
    </style>

    <style name="gkeyboard_lead_btn_imgbtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">.4dp</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="gkeyboard_lead_btn_txv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gkeyboard_lead_btn_text_color</item>
    </style>
